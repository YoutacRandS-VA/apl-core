{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["auto-chart-update"],
  "branchPrefix": "renovate-",
  "dryRun": "full",
  "includePaths": ["chart"],
  "username": "renovate",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "onboarding": false,
  "logFileLevel": "debug",
  "platform": "github",
  "repositories": ["redkubes/otomi-core"],
  "schedule": "before 5am every weekday",
  "extends": ["github>redkubes/renovate-config"],
  "helm-requirements": { "enabled": false },
  "helm-values": { "enabled": false },
  "helmfile": { "enabled": false },
  "helmv3": {
    "enabled": true,
    "registryAliases": { "stable": "https://charts.helm.sh/stable" },
    "commitMessageTopic": "helm chart {{depName}}",
    "fileMatch": ["^chart/otomi-deps/Chart\\.yaml$"]
  },
  "packageRules": [{ "matchCategories": ["docker"], "enabled": false }]
}
